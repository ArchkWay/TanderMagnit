<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:id="@+id/clFrom"
        >


    <TextView
        android:id="@+id/tvCountryFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tvCountry"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvCityFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tvCity"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/tvCountryFrom"
        />

    <TextView
        android:id="@+id/tvStationFrom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="tvStation"
        android:lines="3"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvCityFrom"
        />

    <TextView
        android:id="@+id/tvRegionFrom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="tvRegion"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/tvStationFrom"
        />

    <TextView
        android:id="@+id/tvDistrictFrom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="tvDistrict"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/tvRegionFrom"
        />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/clTo"
        >

    <TextView
        android:id="@+id/tvCountryTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:text="tvCountry"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvCityTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:text="tvCity"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/tvCountryTo"
        />

    <TextView
        android:id="@+id/tvStationTo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="150dp"
        android:text="tvStation"
        android:lines="3"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvCityTo"
        />

    <TextView
        android:id="@+id/tvRegionTo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="150dp"
        android:text="tvRegion"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/tvStationTo"
        />

    <TextView
        android:id="@+id/tvDistrictTo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="150dp"
        android:text="tvDistrict"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/tvRegionTo"
        />


    </android.support.constraint.ConstraintLayout>
    <Button
        android:id="@+id/btnBack"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@color/colorWhite"
        android:text="@string/Back"
        android:layout_marginBottom="150dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>